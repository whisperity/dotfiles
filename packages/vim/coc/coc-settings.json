{
  "coc": {
    "preferences": {
      "semanticTokensHighlight": false
    }
  },
  "codeLens": {
    "enable": true
  },
  /* "diagnostic": { */
  /*   "errorSign": "‚õîÔ∏è", */
  /*   "warningSign": "‚ö†Ô∏è", */
  /*   "infoSign": "‚ÑπÔ∏è", */
  /*   "hintSign": "üí°" */
