  "clangd": {
    "arguments": ["--log=verbose",
                  "--pretty",
                  "--background-index",
                  "--recovery-ast",
                  "-j=4"],
    "semanticHighlighting": true
  },
  "explorer": {
    "icon": {
      "enableNerdfont": true,
      "source": "vim-devicons"
    }
  },
  "rpc": {
    /* "buttonEnabled": true, */
    /* "buttonActiveLabel": "View Repository", */
    /* "buttonInactiveLabel": null, */
    /* "buttonInactiveUrl": null, */
    /* "checkIdle": true, */
    /* "enabled": true, */
    "detailsEditing": "Working on {workspace_folder}",
    "detailsIdle": "Looking around...",
    "detailsInExplorer": "Exploring {workspace_folder}",
    "detailsNotFound": "Hic sunt dracones...",
    "detailsViewing": "Viewing {workspace_folder} {problems}",
    "idleText": "(Idle)",
    "idleTimeout": 600,
    /* "largeImage": "‚†Ä{Lang}", /* U+2800 as space! */
    "largeImage": "\u200b\u200b{Lang}",
    /* "largeImageIdle": "(Idle)", */
    "largeImageInExplorer": "coc-explorer",
    "lowerDetailsEditing": "{file_name}@{current_line} (/{total_lines})",
    "lowerDetailsIdle": "{empty}",
    "lowerDetailsInExplorer": "{empty}",
    "lowerDetailsNotFound": "Out-of-bounds",
    "lowerDetailsViewing": "{file_name} ({total_lines} LoC)",
    "problemsText": "- {count} diagnostics",
    /* "showProblems": true, */
    "smallImage": "{app_name}",
    "suppressNotifications": false,
    "workspaceElapsedTime": true
  },
  "suggest": {
    "enablePreview": true
  }
}
