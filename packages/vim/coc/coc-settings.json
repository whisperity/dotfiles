{
  "codeLens": {
    "enable": true
  },
  "diagnostic": {
    "messageTarget": "float",
    "virtualText": true,
    "virtualTextCurrentLineOnly": true,
    "virtualTextLevel": "warning",
    "errorSign": "‚õîÔ∏è",
    "warningSign": "‚ö†Ô∏è",
    "infoSign": "‚ÑπÔ∏è",
    "hintSign": "üí°"
  },
  "clangd": {
    "arguments": ["--clang-tidy",
                  "--completion-style=detailed",
                  "--header-insertion-decorators",

                  "--enable-config",
                  "-j=12",
                  "--pch-storage=disk",

                  "--log=verbose",
                  "--pretty"]
  },
  "diagnostic-languageserver": {
    "filetypes": {
      "sh": "shellcheck"
    }
  },
  "explorer": {
    "icon": {
      "enableNerdfont": true,
      "source": "vim-devicons"
    },
    "file": {
      "reveal": {
        "whenOpen": true
      }
    }
  },
  "rpc": {
    "buttonEnabled": false,
    "buttonActiveLabel": "View Project",
    /* "buttonInactiveLabel": null, */
    /* "buttonInactiveUrl": null, */
    /* "checkIdle": true, */
    /* "enabled": true, */
    "detailsEditing": "Working on {workspace_folder}",
    "detailsIdle": "Looking around...",
    "detailsInExplorer": "Exploring {workspace_folder}",
    "detailsNotFound": "Hic sunt dracones...",
    "detailsViewing": "Viewing {workspace_folder} {problems}",
    "idleText": "(Idle)",
    "idleTimeout": 600,
    /* "largeImage": "‚†Ä{Lang}", /* U+2800 as space! */
    "largeImage": "\u200b\u200b{Lang}",
    /* "largeImageIdle": "(Idle)", */
    "largeImageInExplorer": "coc-explorer",
    "lowerDetailsEditing": "{file_name}@{current_line} (/{total_lines})",
    "lowerDetailsIdle": "{empty}",
    "lowerDetailsInExplorer": "{empty}",
    "lowerDetailsNotFound": "Out-of-Bounds",
    "lowerDetailsViewing": "{file_name} ({total_lines} LoC)",
    "problemsText": "- {count} diagnostics",
    /* "showProblems": true, */
    "smallImage": "{app_name}",
    "suppressNotifications": false,
    "useCWDAsFallback": false,
    "workspaceElapsedTime": true
  },
  "semanticTokens": {
    "filetypes": ["*"]
  },
  "suggest": {
    "enablePreview": true,
    "virtualText": true
  },
}
